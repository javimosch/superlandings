<!-- Organizations Modal (Admin only) -->
<div v-if="showOrganizationsModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-3 sm:p-4 z-50">
  <div class="bg-white rounded-lg shadow-xl max-w-4xl w-full max-h-[90vh] flex flex-col">
    <div class="px-4 sm:px-6 py-3 sm:py-4 bg-gray-50 border-b flex justify-between items-center">
      <h3 class="text-lg sm:text-xl font-semibold text-gray-900">Organizations & Users</h3>
      <button @click="showOrganizationsModal = false" class="text-gray-500 hover:text-gray-700 flex-shrink-0">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <div class="p-4 sm:p-6 flex-1 overflow-y-auto">
      <!-- Create Organization -->
      <div class="mb-6">
        <h4 class="text-base sm:text-lg font-medium mb-3">Create Organization</h4>
        <div class="flex gap-2 flex-col sm:flex-row">
          <input v-model="newOrgName" type="text" placeholder="Organization name" class="flex-1 px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 text-xs sm:text-sm">
          <button @click="createOrganization" :disabled="!newOrgName.trim()" class="px-3 sm:px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 disabled:opacity-50 text-xs sm:text-sm font-medium flex-shrink-0">
            Create
          </button>
        </div>
      </div>

      <!-- Organizations List -->
      <div class="space-y-4">
        <div v-for="org in allOrganizations" :key="org.id" class="border rounded-lg p-4">
          <div class="flex justify-between items-start mb-3">
            <div>
              <div v-if="editingOrg?.id === org.id" class="flex gap-2">
                <input v-model="editingOrg.name" type="text" class="px-3 py-1 border rounded">
                <button @click="saveOrganization" class="px-3 py-1 bg-green-500 text-white rounded text-sm">Save</button>
                <button @click="editingOrg = null" class="px-3 py-1 bg-gray-300 rounded text-sm">Cancel</button>
              </div>
              <h5 v-else class="font-semibold text-lg">{{ org.name }}</h5>
              <p class="text-xs text-gray-500">ID: {{ org.id }}</p>
            </div>
            <div class="flex gap-2">
              <button v-if="editingOrg?.id !== org.id" @click="editingOrg = { ...org }" class="px-3 py-1 bg-gray-100 text-gray-700 rounded text-sm hover:bg-gray-200">Edit</button>
              <button @click="deleteOrganization(org.id)" class="px-3 py-1 bg-red-100 text-red-700 rounded text-sm hover:bg-red-200">Delete</button>
            </div>
          </div>

          <!-- Users in Organization -->
          <div class="mt-3 border-t pt-3">
            <div class="flex justify-between items-center mb-2">
              <h6 class="font-medium text-sm text-gray-700">Team Members</h6>
              <button @click="showAddUserToOrg = org.id" class="text-xs text-blue-600 hover:text-blue-800">+ Add User</button>
            </div>

            <!-- Add User Form -->
            <div v-if="showAddUserToOrg === org.id" class="mb-3 p-3 bg-gray-50 rounded">
              <div class="flex gap-2 mb-2">
                <select v-model="addUserEmail" class="flex-1 px-3 py-1 border rounded text-sm">
                  <option value="">Select user...</option>
                  <option v-for="user in availableUsersForOrg(org)" :key="user.email" :value="user.email">{{ user.email }}</option>
                </select>
                <button @click="addUserToOrganization(org.id)" :disabled="!addUserEmail" class="px-3 py-1 bg-blue-500 text-white rounded text-sm disabled:opacity-50">Add</button>
                <button @click="showAddUserToOrg = null; addUserEmail = ''" class="px-3 py-1 bg-gray-300 rounded text-sm">Cancel</button>
              </div>
            </div>

            <div v-if="org.users && org.users.length > 0" class="space-y-2">
              <div v-for="user in org.users" :key="user.email" class="flex justify-between items-center p-2 bg-gray-50 rounded">
                <span class="text-sm">{{ user.email }}</span>
                <div class="flex gap-2 items-center">
                  <button @click="openUserRightsModal(org, user)" class="text-xs text-blue-600 hover:text-blue-800">Rights</button>
                  <button @click="removeUserFromOrganization(org.id, user.email)" class="text-xs text-red-600 hover:text-red-800">Remove</button>
                </div>
              </div>
            </div>
            <p v-else class="text-sm text-gray-500">No users assigned</p>
          </div>
        </div>
      </div>

      <!-- Users Management Section -->
      <div class="mt-8 border-t pt-6">
        <h4 class="text-lg font-medium mb-3">All Users</h4>
        
        <!-- Create User -->
        <div class="flex gap-2 mb-4">
          <input v-model="newUserEmail" type="email" placeholder="Email" class="flex-1 px-4 py-2 border border-gray-300 rounded-lg">
          <input v-model="newUserPassword" type="password" placeholder="Password (min 3 chars)" class="flex-1 px-4 py-2 border border-gray-300 rounded-lg">
          <button @click="createUser" :disabled="!newUserEmail.trim() || newUserPassword.length < 3" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 disabled:opacity-50">
            Create User
          </button>
        </div>

        <!-- Users List -->
        <div class="space-y-2">
          <div v-for="user in allUsers" :key="user.email" class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
            <span>{{ user.email }}</span>
            <button @click="deleteUser(user.email)" class="px-3 py-1 bg-red-100 text-red-700 rounded text-sm hover:bg-red-200">Delete</button>
          </div>
          <p v-if="allUsers.length === 0" class="text-gray-500 text-center py-4">No users created yet</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- User Rights Modal -->
<div v-if="showUserRightsModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
  <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
    <div class="px-6 py-4 bg-gray-50 border-b flex justify-between items-center">
      <h3 class="text-lg font-semibold text-gray-900">Edit Rights: {{ editingUserRights?.email }}</h3>
      <button @click="showUserRightsModal = false" class="text-gray-500 hover:text-gray-700">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <div class="p-6">
      <p class="text-sm text-gray-600 mb-4">Organization: {{ editingUserRights?.orgName }}</p>
      
      <div class="flex gap-2 mb-4">
        <button @click="selectAllRights" class="px-3 py-1 bg-blue-100 text-blue-700 rounded text-sm">Check All</button>
        <button @click="selectNoRights" class="px-3 py-1 bg-gray-100 text-gray-700 rounded text-sm">Check None</button>
      </div>

      <div class="space-y-2">
        <label v-for="right in availableRights" :key="right" class="flex items-center gap-2 p-2 hover:bg-gray-50 rounded cursor-pointer">
          <input type="checkbox" :value="right" v-model="editingUserRights.rights" class="w-4 h-4">
          <span class="text-sm">{{ right }}</span>
        </label>
      </div>

      <div class="mt-6 flex gap-3">
        <button @click="saveUserRights" class="flex-1 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Save</button>
        <button @click="showUserRightsModal = false" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300">Cancel</button>
      </div>
    </div>
  </div>
</div>
