<!-- Edit Modal -->
<div v-if="showEditModal" class="fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center p-0 z-50">
  <div class="bg-white shadow-2xl w-full h-full max-h-screen flex flex-col">
    <div class="px-6 py-4 bg-gray-50 border-b flex justify-between items-center flex-shrink-0">
      <div class="flex items-center gap-4">
        <h3 class="text-xl font-semibold text-gray-900">Edit {{ editingLanding.type === 'html' ? 'HTML' : 'EJS Template' }} - {{ editingLanding.name }}</h3>
        <div v-if="editingLanding.type === 'html'" class="text-sm text-gray-500">
          <span class="font-mono bg-gray-100 px-2 py-1 rounded">Ctrl+F</span> to search • 
          <span class="font-mono bg-gray-100 px-2 py-1 rounded">Ctrl+G</span> to find next • 
          <span class="font-mono bg-gray-100 px-2 py-1 rounded">Ctrl+Shift+G</span> to find previous
        </div>
      </div>
      <button @click="closeEditModal" class="text-gray-500 hover:text-gray-700">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <div v-if="editingLanding.type === 'html'" class="flex-1 overflow-hidden p-6">
      <div ref="editEditorContainer" class="h-full w-full"></div>
    </div>

    <div v-if="editingLanding.type === 'ejs'" class="p-6 space-y-4 flex-1 overflow-y-auto">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Upload EJS Files</label>
        <input ref="editEjsFileInput" type="file" :multiple="true" accept=".ejs,.html" @change="handleEditEjsFilesChange" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
        <p class="mt-1 text-sm text-gray-500">Select one or multiple individual .ejs files.</p>

        <div class="my-4 border-t border-gray-200"></div>

        <label class="block text-sm font-medium text-gray-700 mb-2">Upload EJS Template as ZIP file</label>
        <input ref="editEjsZipInput" type="file" accept=".zip" @change="handleEditEjsZipChange" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
        <p class="mt-1 text-sm text-gray-500">Upload a .zip archive containing your index.ejs (main template) and any related .ejs partials or folders.</p>

        <div v-if="editSelectedEjsFiles.length > 0" class="mt-2 text-sm text-gray-600">
          Selected EJS Files: {{ editSelectedEjsFiles.map(f => f.name).join(', ') }}
        </div>
        <div v-if="editSelectedEjsZip" class="mt-2 text-sm text-gray-600">
          Selected ZIP File: {{ editSelectedEjsZip.name }}
        </div>
      </div>
    </div>

    <div class="px-6 py-4 bg-gray-50 border-t flex gap-3">
      <button @click="saveEdit" class="flex-1 bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition font-semibold">
        Save Changes
      </button>
      <button @click="closeEditModal" class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition font-semibold">
        Cancel
      </button>
    </div>
  </div>
</div>
