<!-- Move Landing Modal (Admin only) -->
<div v-if="showMoveModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-3 sm:p-4 z-50">
  <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
    <div class="px-4 sm:px-6 py-3 sm:py-4 bg-gray-50 border-b flex justify-between items-center">
      <h3 class="text-base sm:text-lg font-semibold text-gray-900">Move Landing</h3>
      <button @click="showMoveModal = false" class="text-gray-500 hover:text-gray-700 flex-shrink-0">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <div class="p-4 sm:p-6">
      <p class="text-xs sm:text-sm text-gray-600 mb-4">
        Moving: <strong class="break-words">{{ movingLanding?.name }}</strong>
      </p>
      <p class="text-xs sm:text-sm text-gray-600 mb-4">
        Current organization: <strong class="break-words">{{ getOrgName(movingLanding?.organizationId) }}</strong>
      </p>

      <label class="block text-sm font-medium text-gray-700 mb-2">Move to organization:</label>
      <select v-model="moveTargetOrgId" class="w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 text-xs sm:text-sm">
        <option value="">Select organization...</option>
        <option v-for="org in organizations.filter(o => o.id !== movingLanding?.organizationId)" :key="org.id" :value="org.id">
          {{ org.name }}
        </option>
      </select>

      <div class="mt-6 flex gap-3 flex-col sm:flex-row">
        <button @click="moveLanding" :disabled="!moveTargetOrgId || loading.move" class="flex-1 bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 disabled:opacity-50 text-xs sm:text-sm font-medium">
          <span v-if="loading.move">Moving...</span>
          <span v-else>Move Landing</span>
        </button>
        <button @click="showMoveModal = false" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 text-xs sm:text-sm font-medium">Cancel</button>
      </div>
    </div>
  </div>
</div>
