<!-- Add Landing Modal -->
<div v-if="showAddModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-3 sm:p-4 z-50">
  <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
    <div class="px-4 sm:px-6 py-3 sm:py-4 bg-gray-50 border-b flex justify-between items-center">
      <h3 class="text-lg sm:text-xl font-semibold text-gray-900">Add New Landing</h3>
      <button @click="closeAddModal" class="text-gray-500 hover:text-gray-700 flex-shrink-0">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <form @submit.prevent="addLanding" class="p-4 sm:p-6 space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Landing Name</label>
        <input v-model="newLanding.name" type="text" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="My Awesome Landing">
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Slug (URL path)</label>
        <input v-model="newLanding.slug" type="text" required pattern="[a-z0-9-]+" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="my-landing">
        <p class="mt-1 text-sm text-gray-500">Only lowercase letters, numbers, and hyphens</p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Domains (optional)</label>
        <div class="space-y-2">
          <div v-for="(domain, index) in newLanding.domains" :key="index" class="flex gap-2">
            <input v-model="newLanding.domains[index]" type="text" class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="example.com">
            <button @click="newLanding.domains.splice(index, 1)" type="button" class="px-3 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200">
              âœ•
            </button>
          </div>
          <button @click="newLanding.domains.push('')" type="button" class="w-full px-4 py-2 border-2 border-dashed border-gray-300 rounded-lg text-gray-600 hover:border-blue-500 hover:text-blue-600">
            + Add Domain
          </button>
        </div>
        <p class="mt-1 text-sm text-gray-500">Leave empty to only serve on /:slug. Add domains to enable Traefik publishing.</p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Type</label>
        <select v-model="newLanding.type" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
          <option value="html">Single HTML File</option>
          <option value="static">Static Folder (ZIP or Files)</option>
          <option value="ejs">EJS Template</option>
        </select>
      </div>

      <div v-if="newLanding.type === 'html'">
        <label class="block text-sm font-medium text-gray-700 mb-2">HTML Content</label>
        <div ref="addEditorContainer"></div>
      </div>

      <div v-if="newLanding.type === 'static'">
        <label class="block text-sm font-medium text-gray-700 mb-2">Upload ZIP file or multiple files</label>
        <input ref="fileInput" type="file" :multiple="true" accept=".zip,*" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
      </div>

      <div v-if="newLanding.type === 'ejs'">
        <label class="block text-sm font-medium text-gray-700 mb-2">Upload EJS Files</label>
        <input ref="ejsFileInput" type="file" :multiple="true" accept=".ejs,.html" @change="handleEjsFilesChange" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
        <p class="mt-1 text-sm text-gray-500">Select one or multiple individual .ejs files.</p>

        <div class="my-4 border-t border-gray-200"></div>

        <label class="block text-sm font-medium text-gray-700 mb-2">Upload EJS Template as ZIP file</label>
        <input ref="ejsZipInput" type="file" accept=".zip" @change="handleEjsZipChange" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
        <p class="mt-1 text-sm text-gray-500">Upload a .zip archive containing your index.ejs (main template) and any related .ejs partials or folders.</p>

        <div v-if="selectedEjsFiles.length > 0" class="mt-2 text-sm text-gray-600">
          Selected EJS Files: {{ selectedEjsFiles.map(f => f.name).join(', ') }}
        </div>
        <div v-if="selectedEjsZip" class="mt-2 text-sm text-gray-600">
          Selected ZIP File: {{ selectedEjsZip.name }}
        </div>
      </div>

      <div class="flex gap-3 pt-4 flex-col sm:flex-row">
        <button type="submit" class="flex-1 bg-blue-600 text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg hover:bg-blue-700 transition font-semibold text-sm sm:text-base">
          Create Landing
        </button>
        <button type="button" @click="closeAddModal" class="px-4 sm:px-6 py-2 sm:py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition font-semibold text-sm sm:text-base">
          Cancel
        </button>
      </div>
    </form>
  </div>
</div>
