<!-- Domains Modal -->
<div v-if="showDomainsModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
  <div class="bg-white rounded-lg shadow-xl max-w-lg w-full max-h-[90vh] overflow-y-auto">
    <div class="px-6 py-4 bg-gray-50 border-b flex justify-between items-center">
      <h3 class="text-xl font-semibold text-gray-900">Configure Domains</h3>
      <button @click="closeDomainsModal" class="text-gray-500 hover:text-gray-700">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <div class="p-6">
      <div class="mb-4">
        <p class="text-sm text-gray-600 mb-4">Landing: <strong>{{ editingDomains?.name }}</strong></p>
        <label class="block text-sm font-medium text-gray-700 mb-2">Domains</label>
        <div class="space-y-2 mb-3">
          <div v-for="(domainObj, index) in editingDomains.domains" :key="index" class="flex gap-2 items-center">
            <input v-model="domainObj.domain" type="text" pattern="[a-zA-Z0-9.-]+\.[a-zA-Z]{2,}" class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="example.com" title="Enter a valid domain (e.g., example.com)">
            <button v-if="domainObj.published" @click="unpublishSingleDomain(domainObj.domain)" :disabled="loading[editingDomains.id + '-' + domainObj.domain]" type="button" class="px-3 py-2 bg-orange-100 text-orange-700 rounded-lg hover:bg-orange-200 transition text-xs font-medium disabled:opacity-50 disabled:cursor-not-allowed">
              <span v-if="loading[editingDomains.id + '-' + domainObj.domain]">⏳</span>
              <span v-else>Unpub</span>
            </button>
            <button v-else @click="publishSingleDomain(domainObj.domain)" :disabled="loading[editingDomains.id + '-' + domainObj.domain] || !domainObj.domain.trim()" type="button" class="px-3 py-2 bg-green-100 text-green-700 rounded-lg hover:bg-green-200 transition text-xs font-medium disabled:opacity-50 disabled:cursor-not-allowed">
              <span v-if="loading[editingDomains.id + '-' + domainObj.domain]">⏳</span>
              <span v-else>Pub</span>
            </button>
            <span v-if="domainObj.published" class="px-2 py-1 bg-green-100 text-green-700 rounded text-xs">✓</span>
            <button @click="removeDomain(index)" type="button" class="px-3 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition">
              ✕
            </button>
          </div>
          <button @click="addDomain" type="button" class="w-full px-4 py-2 border-2 border-dashed border-gray-300 rounded-lg text-gray-600 hover:border-blue-500 hover:text-blue-600 transition">
            + Add Domain
          </button>
        </div>
        <p class="mt-2 text-sm text-gray-500">Configure multiple domains. Publish/unpublish each domain individually or use the buttons below for all at once.</p>
        <p v-if="editingDomains.published" class="mt-2 text-sm text-blue-600">ℹ️ Landing is currently published. You can publish/unpublish individual domains without affecting others.</p>
      </div>

      <div class="flex gap-3">
        <button @click="saveDomains" class="flex-1 bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition font-semibold">
          Save Domains
        </button>
        <button @click="closeDomainsModal" class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition font-semibold">
          Cancel
        </button>
      </div>
    </div>
  </div>
</div>
